{
  "title": "analytics.txt",
  "description": "A schema for validating analytics.txt files as specified in draft-offen-analyticstxt-latest",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "noneType": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["none"]
      },
      "uniqueItems": true
    },
    "singleItem": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "maxItems": 1
    },
    "nonEmptyList": {
      "type": "array",
      "uniqueItems": true,
      "minItems": 1,
      "items": {
        "type": "string"
      }
    }
  },
  "oneOf": [
    {
      "type": "object",
      "description": "A declaration with data being collected",
      "properties": {
        "Author": {
          "$ref": "#/definitions/singleItem"
        },
        "Collects": {
          "allOf": [
            {
              "$ref": "#/definitions/nonEmptyList"
            },
            {
              "type": "array",
              "items": {
                "enum": [
                  "url",
                  "ip-address",
                  "geo-location",
                  "user-agent",
                  "fingerprint",
                  "device-type",
                  "referrer",
                  "visit-duration",
                  "custom-events",
                  "session-recording"
                ]
              }
            }
          ]
        },
        "Stores": {
          "oneOf": [
            {
              "$ref": "#/definitions/noneType"
            },
            {
              "type": "array",
              "items": {
                "enum": [
                  "first-party-cookies",
                  "third-party-cookies",
                  "local-storage",
                  "cache"
                ]
              },
              "minItems": 1,
              "uniqueItems": true
            }
          ]
        },
        "Uses": {
          "allOf": [
            {
              "$ref": "#/definitions/nonEmptyList"
            },
            {
              "type": "array",
              "items": {
                "enum": [
                  "javascript",
                  "pixel",
                  "server-side",
                  "logs",
                  "other"
                ]
              }
            }
          ]
        },
        "Allows": {
          "oneOf": [
            {
              "$ref": "#/definitions/noneType"
            },
            {
              "allOf": [
                {
                  "$ref": "#/definitions/nonEmptyList"
                },
                {
                  "type": "array",
                  "items": {
                    "enum": [
                      "opt-in",
                      "opt-out"
                    ]
                  }
                }
              ]
            }
          ]
        },
        "Retains": {
          "allOf": [
            {
              "$ref": "#/definitions/singleItem"
            },
            {
              "oneOf": [
                {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "format": "duration"
                  }
                },
                {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "enum": [
                      "perpetual"
                    ]
                  }
                }
              ]
            }
          ]
        },
        "Honors": {
          "oneOf": [
            {
              "$ref": "#/definitions/noneType"
            },
            {
              "allOf": [
                {
                  "$ref": "#/definitions/nonEmptyList"
                },
                {
                  "type": "array",
                  "items": {
                    "enum": [
                      "do-not-track",
                      "global-privacy-control"
                    ]
                  }
                }
              ]
            }
          ]
        },
        "Tracks": {
          "allOf": [
            {
              "$ref": "#/definitions/nonEmptyList"
            },
            {
              "oneOf": [
                {
                  "$ref": "#/definitions/noneType"
                },
                {
                  "type": "array",
                  "items": {
                    "enum": [
                      "sessions",
                      "users"
                    ]
                  }
                }
              ]
            }
          ]
        },
        "Varies": {
          "allOf": [
            {
              "$ref": "#/definitions/singleItem"
            },
            {
              "type": "array",
              "items": {
                "enum": [
                  "none",
                  "random",
                  "behavioral"
                ]
              }
            }
          ]
        },
        "Shares": {
          "oneOf": [
            {
              "$ref": "#/definitions/noneType"
            },
            {
              "allOf": [
                {
                  "$ref": "#/definitions/nonEmptyList"
                },
                {
                  "type": "array",
                  "items": {
                    "enum": [
                      "per-user",
                      "general-public",
                      "third-party"
                    ]
                  }
                }
              ]
            }
          ]
        },
        "Implements": {
          "$ref": "#/definitions/nonEmptyList"
        },
        "Deploys": {
          "$ref": "#/definitions/nonEmptyList"
        }
      },
      "required": [
        "Author",
        "Collects",
        "Stores",
        "Uses",
        "Allows",
        "Retains"
      ],
      "additionalProperties": false
    },
    {
      "type": "object",
      "description": "A file declaring that no data is collected",
      "properties": {
        "Author": {
          "$ref": "#/definitions/singleItem"
        },
        "Collects": {
          "$ref": "#/definitions/noneType"
        }
      },
      "required": [
        "Author",
        "Collects"
      ],
      "additionalProperties": false
    }
  ]
}
