{
  "title": "analytics.txt",
  "description": "A schema for validating analytics.txt files as specified in draft-ring-analyticstxt-00",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Author": {
      "type": "array",
      "minItems": 1,
      "maxItems": 1,
      "items": {
        "oneOf": [
          {
            "type": "string",
            "format": "email"
          },
          {
            "type": "string",
            "pattern": "^.+\\s<[a-z0-9!#$%&'*+/=?^_`{|}~-]+(?:\\.[a-z0-9!#$%&'*+/=?^_`{|}~-]+)*@(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\\.)+[a-z0-9](?:[a-z0-9-]*[a-z0-9])?>$"
          }
        ]
      }
    },
    "NoneValue": {
      "description": "A single value 'none' is given",
      "type": "array",
      "items": {
        "enum": ["none"]
      },
      "minItems": 1,
      "maxItems": 1
    },
    "SingleValue": {
      "description": "A single arbitrary string value is given",
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "maxItems": 1
    },
    "UniqueValues": {
      "description": "A non-empty list of unique strings",
      "type": "array",
      "uniqueItems": true,
      "minItems": 1,
      "items": {
        "type": "string"
      }
    }
  },
  "oneOf": [
    {
      "type": "object",
      "description": "A declaration where data is being collected",
      "properties": {
        "Author": {
          "$ref": "#/definitions/Author"
        },
        "Collects": {
          "allOf": [
            {
              "$ref": "#/definitions/UniqueValues"
            },
            {
              "type": "array",
              "items": {
                "enum": [
                  "url",
                  "ip-address",
                  "geo-location",
                  "user-agent",
                  "fingerprint",
                  "device-type",
                  "referrer",
                  "visit-duration",
                  "custom-events",
                  "session-recording"
                ]
              }
            }
          ]
        },
        "Stores": {
          "oneOf": [
            {
              "$ref": "#/definitions/NoneValue"
            },
            {
              "allOf": [
                {
                  "$ref": "#/definitions/UniqueValues"
                },
                {
                  "type": "array",
                  "items": {
                    "enum": [
                      "first-party-cookies",
                      "third-party-cookies",
                      "local-storage",
                      "cache"
                    ]
                  }
                }
              ]
            }
          ]
        },
        "Uses": {
          "allOf": [
            {
              "$ref": "#/definitions/UniqueValues"
            },
            {
              "type": "array",
              "items": {
                "enum": [
                  "javascript",
                  "pixel",
                  "server-side",
                  "logs",
                  "other"
                ]
              }
            }
          ]
        },
        "Allows": {
          "oneOf": [
            {
              "$ref": "#/definitions/NoneValue"
            },
            {
              "allOf": [
                {
                  "$ref": "#/definitions/UniqueValues"
                },
                {
                  "type": "array",
                  "items": {
                    "enum": [
                      "opt-in",
                      "opt-out"
                    ]
                  }
                }
              ]
            }
          ]
        },
        "Retains": {
          "allOf": [
            {
              "$ref": "#/definitions/SingleValue"
            },
            {
              "oneOf": [
                {
                  "type": "array",
                  "items": {
                    "oneOf": [
                      {
                        "type": "string",
                        "format": "duration"
                      },
                      {
                        "type": "string",
                        "enum": [
                          "perpetual"
                        ]
                      }
                    ]
                  }
                }
              ]
            }
          ]
        },
        "Honors": {
          "oneOf": [
            {
              "$ref": "#/definitions/NoneValue"
            },
            {
              "allOf": [
                {
                  "$ref": "#/definitions/UniqueValues"
                },
                {
                  "type": "array",
                  "items": {
                    "enum": [
                      "do-not-track",
                      "global-privacy-control"
                    ]
                  }
                }
              ]
            }
          ]
        },
        "Tracks": {
          "allOf": [
            {
              "$ref": "#/definitions/UniqueValues"
            },
            {
              "oneOf": [
                {
                  "$ref": "#/definitions/NoneValue"
                },
                {
                  "type": "array",
                  "items": {
                    "enum": [
                      "sessions",
                      "users"
                    ]
                  }
                }
              ]
            }
          ]
        },
        "Varies": {
          "allOf": [
            {
              "$ref": "#/definitions/SingleValue"
            },
            {
              "type": "array",
              "items": {
                "enum": [
                  "none",
                  "random",
                  "behavioral",
                  "geographic"
                ]
              }
            }
          ]
        },
        "Shares": {
          "oneOf": [
            {
              "$ref": "#/definitions/NoneValue"
            },
            {
              "allOf": [
                {
                  "$ref": "#/definitions/UniqueValues"
                },
                {
                  "type": "array",
                  "items": {
                    "enum": [
                      "per-user",
                      "general-public",
                      "third-party"
                    ]
                  }
                }
              ]
            }
          ]
        },
        "Implements": {
          "$ref": "#/definitions/UniqueValues"
        },
        "Deploys": {
          "$ref": "#/definitions/UniqueValues"
        }
      },
      "required": [
        "Author",
        "Collects",
        "Stores",
        "Uses",
        "Allows",
        "Retains"
      ],
      "additionalProperties": false
    },
    {
      "type": "object",
      "description": "A file declaring that no data is collected",
      "properties": {
        "Author": {
          "$ref": "#/definitions/Author"
        },
        "Collects": {
          "$ref": "#/definitions/NoneValue"
        }
      },
      "required": [
        "Author",
        "Collects"
      ],
      "additionalProperties": false
    }
  ]
}
